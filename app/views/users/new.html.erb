<div class="page-container">
  <div class="signup-container">
    <div class="signup-header">
      <center><h4 class="tagline">Capture + Share</h4></center>
      <center><p class="subheading">sign up to see photos and videos from your friends and join our community</p></center>
    </div>

    <%= form_with model: @user do |form| %>
      
      
      <div class="form-floating mb-1" style="padding-top: 7px">
        <%= form.email_field :email, class: "form-control", id: "floatingInput", placeholder: "Email Address" %>
        <label for="floatingInput">Email Address</label>
      </div>

      <div class="form-floating mb-1" style="padding-top: 7px">
        <%= form.text_field :full_name, class: "form-control", id: "floatingFullName", placeholder: "Full Name" %>
        <label for="floatingFullName">Full Name</label>
      </div>

      <div class="form-floating mb-1" style="padding-top: 7px">
        <%= form.text_field :username, class: "form-control", id: "floatingUsername", placeholder: "Username" %>
        <label for="floatingUsername">Username</label>
      </div>

      <div class="form-floating mb-1" style="padding-top: 7px">
        <%= form.password_field :password, class: "form-control", id: "floatingPassword", placeholder: "Password" %>
        <label for="floatingPassword">Password</label>
      </div>

      <div class="form-floating mb-1" style="padding-top: 7px">
        <%= form.password_field :password_confirmation, class: "form-control", id: "floatingPasswordConfirmation", placeholder: "Password Confirmation" %>
        <label for="floatingPasswordConfirmation">Password Confirmation</label>
      </div>

      <div class="form-group" style="padding-top: 7px">
        <%= form.submit "Sign Up", class: "red-button" %>
      </div>

      <div class="option" style="padding-top: 7px">
        <center><p>Have an account? <a href="">Log In</a></p></center>
      </div>
    <% end %>
  </div>
</div>

<style>
  html, body {
    height: 100%;
    margin: 0;
  }

  .signup-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    max-width: 400px;
    margin-top: 25px;
    border: 2px solid #999; /* Add border */
    padding: 20px; /* Add padding */
    border-radius: 10px; /* Add rounded corners */
  }

  .page-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: 100%;
    margin-top: 5px;
  }


  .form-group {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    padding: 7px;
  }

  .red-button {
    background-color: rgb(255, 90, 95);
    color: white;
    border: none;
    padding: 10px 20px;
    font-size: 1em;
    cursor: pointer;
    transition: background-color 0.3s;
    border-radius: 5px;
    width: 135px;
  }

  .red-button:hover {
    background-color: darkred;
  }
</style>
