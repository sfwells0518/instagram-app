<div class="container">
  <% if @post %>
    <div class="card my-4">
      <%= image_tag @post.post_image, class: "card-img-top" %>
      <div class="card-body text-center">
        <p class="card-text"><%= @post.caption %></p>
        <div class="button-container">
          <a href="/posts/<%= @post.id %>/edit" class="btn btn-primary">Edit Post</a>
          <a href="/posts/<%= @post.id %>" data-turbo-method="delete" class="btn btn-danger">Delete Post</a>
        </div>
      </div>
    </div>
  <% else %>
    <p>Post not found</p>
  <% end %>
</div>

<style>

.card {
  max-width: 700px;
  margin: 0 auto;
  border: 1px solid #000;
  box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
}

.card-img-top {
  height: 400px;
  object-fit: cover;
}

.card-text {
  font-size: 24px;
  margin-bottom: 10px;
}

.button-container {
  display: flex;
  justify-content: center;
  gap: 10px;
}



</style>